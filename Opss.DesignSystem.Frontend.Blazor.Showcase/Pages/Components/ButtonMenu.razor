<h3 class="govuk-heading-m" id="grouping buttons">Grouping buttons</h3>

<Example BlazorExampleContent="@(@"<div class=""moj-button-group moj-button-group--inline"">
    <GdsButton Type=""submit"">Accept booking</GdsButton>
    <GdsButtonMenu MenuTitle=""Review booking"" MenuTitleButtonClasses=@GdsButtonClasses.Secondary>
            <GdsButtonMenuItem>Approve</GdsButtonMenuItem>
            <GdsButtonMenuItem>Request more information</GdsButtonMenuItem>
            <GdsButtonMenuItem>Reject with reason</GdsButtonMenuItem>
    </GdsButtonMenu>
</div>")">
    <div class="moj-button-group moj-button-group--inline">
        <GdsButton Type="submit">Accept booking</GdsButton>
        <GdsButtonMenu MenuTitle="Review booking" MenuTitleButtonClasses=@GdsButtonClasses.Secondary>
            <GdsButtonMenuItem>Approve</GdsButtonMenuItem>
            <GdsButtonMenuItem>Request more information</GdsButtonMenuItem>
            <GdsButtonMenuItem>Reject with reason</GdsButtonMenuItem>
        </GdsButtonMenu>
    </div>
</Example>

