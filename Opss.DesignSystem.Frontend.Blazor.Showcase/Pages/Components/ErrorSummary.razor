@page "/Components/ErrorSummary"
@layout _ComponentsLayout

<PageTitle>Error summary</PageTitle>

<span class="govuk-caption-xl">Components</span>
<h1 class="govuk-heading-xl">Error summary</h1>

<p class="govuk-body">
    A blazor implementation of the GDS <a href="https://design-system.service.gov.uk/components/error-summary/" class="govuk-link">Error summary</a>.
</p>

<Example CodeExampleContent="@(@"<GdsErrorSummary>
    <GdsErrorSummaryItem Href=""#"">
        Enter your full name
    </GdsErrorSummaryItem>
    <GdsErrorSummaryItem Href=""#"">
        The date your passport was issued must be in the past
    </GdsErrorSummaryItem>
</GdsErrorSummary>")">
    <GdsErrorSummary>
        <GdsErrorSummaryItem Href="#">Enter your full name</GdsErrorSummaryItem>
        <GdsErrorSummaryItem Href="#">The date your passport was issued must be in the past</GdsErrorSummaryItem>
    </GdsErrorSummary>
</Example>

<h2 class="govuk-heading-l" id="how-it-works">How it works</h2>

<Example CodeExampleContent="@(@"<GdsErrorSummary>
    <GdsErrorSummaryItem Href=""#"">
        Enter your full name
    </GdsErrorSummaryItem>
    <GdsErrorSummaryItem Href=""#"">
        The date your passport was issued must be in the past
    </GdsErrorSummaryItem>
</GdsErrorSummary>")">
    <GdsErrorSummary>
        <GdsErrorSummaryItem Href="#">Enter your full name</GdsErrorSummaryItem>
        <GdsErrorSummaryItem Href="#">The date your passport was issued must be in the past</GdsErrorSummaryItem>
    </GdsErrorSummary>
</Example>

<h3 class="govuk-heading-m" id="linking-to-each-answer">
    Linking from the error summary to each answer
</h3>

<Example CodeExampleContent="@(@"<GdsErrorSummary>
    <GdsErrorSummaryItem Href=""#full-name-input"">
        Enter your full name
    </GdsErrorSummaryItem>
</GdsErrorSummary>
<h1 class=""govuk-heading-l"">Your details</h1>
<GdsTextInput Id=""full-name-input""
                Name=""name""
                Autocomplete=""name"">
    <LabelTemplate>
        <GdsLabel For=""full-name-input"">
            Full name
        </GdsLabel>
    </LabelTemplate>
    <ErrorMessageTemplate>
        <GdsErrorMessage Id=""full-name-input-error"">
            Enter your full name
        </GdsErrorMessage>
    </ErrorMessageTemplate>
</GdsTextInput>")">
    <GdsErrorSummary>
        <GdsErrorSummaryItem Href="#full-name-input">
            Enter your full name
        </GdsErrorSummaryItem>
    </GdsErrorSummary>
    <h1 class="govuk-heading-l">Your details</h1>
    <GdsTextInput Id="full-name-input"
                  Name="name"
                  Autocomplete="name">
        <LabelTemplate>
            <GdsLabel For="full-name-input">
                Full name
            </GdsLabel>
        </LabelTemplate>
        <ErrorMessageTemplate>
            <GdsErrorMessage Id="full-name-input-error">
                Enter your full name
            </GdsErrorMessage>
        </ErrorMessageTemplate>
    </GdsTextInput>
</Example>

