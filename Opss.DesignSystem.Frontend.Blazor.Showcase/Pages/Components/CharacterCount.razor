<h3 class="govuk-heading-m" id="avoid-narrow-limits">Avoid narrow limits</h3>

<Example CodeExampleContent="@(@"<GdsCharacterCount Id=""threshold""
                    Name=""threshold""
                    MaxLength=""15""
                    Threshold=""8""
                    Value=""This example of a textarea has a character limit of 15 characters."">
    <LabelTemplate>
        <GdsLabel Classes=@LabelSize.Large
                    IsPageHeading=@true>
            Can you provide more detail?
        </GdsLabel>
    </LabelTemplate>
</GdsCharacterCount>")">
    <GdsCharacterCount Id="threshold"
                       Name="threshold"
                       MaxLength="15"
                       Threshold="8"
                       Value="This example of a textarea has a character limit of 15 characters.">
        <LabelTemplate>
            <GdsLabel Classes=@LabelSize.Large
                      IsPageHeading=@true>
                Can you provide more detail?
            </GdsLabel>
        </LabelTemplate>
    </GdsCharacterCount>
</Example>

<h3 class="govuk-heading-m" id="error-messages">Error messages</h3>

