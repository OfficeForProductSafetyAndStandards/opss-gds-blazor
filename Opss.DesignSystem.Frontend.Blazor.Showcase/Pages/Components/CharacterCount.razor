@page "/Components/CharacterCount"
@layout _ComponentsLayout

<PageTitle>Character count</PageTitle>

<span class="govuk-caption-xl">Components</span>
<h1 class="govuk-heading-xl">Character count</h1>

<p class="govuk-body">
    A blazor implementation of the GDS <a href="https://design-system.service.gov.uk/components/character-count/" class="govuk-link">Character count</a>.
</p>

<Example CodeExampleContent="@(@"<GdsCharacterCount Id=""with-hint""
                   Name=""withHint""
                   MaxLength=""200"">
    <LabelTemplate>
        <GdsLabel Classes=@LabelSize.Large
            IsPageHeading=@true>
            Can you provide more detail?
        </GdsLabel>
    </LabelTemplate>
    <HintTemplate>
        <GdsHint>
            Do not include personal or financial information like your National Insurance number or credit card details
        </GdsHint>
    </HintTemplate>
</GdsCharacterCount>")">
    <GdsCharacterCount Id="with-hint"
                       Name="withHint"
                       MaxLength="200">
        <LabelTemplate>
            <GdsLabel Classes=@LabelSize.Large
                      IsPageHeading=@true>
                Can you provide more detail?
            </GdsLabel>
        </LabelTemplate>
        <HintTemplate>
            <GdsHint>
                Do not include personal or financial information like your National Insurance number or credit card details
            </GdsHint>
        </HintTemplate>
    </GdsCharacterCount>
</Example>

