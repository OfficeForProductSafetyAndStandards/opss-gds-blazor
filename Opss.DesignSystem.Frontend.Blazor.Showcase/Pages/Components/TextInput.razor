@page "/Components/TextInput"
@layout _ComponentsLayout

<PageTitle>Text input</PageTitle>

<span class="govuk-caption-xl">Components</span>
<h1 class="govuk-heading-xl">Text input</h1>

<p class="govuk-body">
    A blazor implementation of the GDS <a href="https://design-system.service.gov.uk/components/text-input/" class="govuk-link">Text input</a>.
</p>

<Example CodeExampleContent="@(@"<GdsTextInput Id=""event-name""
              Name=""event-name"">
    <LabelTemplate>
        <GdsLabel For=""event-name"" 
                  Classes=""@LabelSize.Large""
                  IsPageHeading=""true"">
            What is the name of the event?
        </GdsLabel>
    </LabelTemplate>
    <HintTemplate>
        <GdsHint>The event's name</GdsHint>
    </HintTemplate>
</GdsTextInput>")">
