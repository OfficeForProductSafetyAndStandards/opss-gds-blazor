                  Name="event-name">
        <LabelTemplate>
            <GdsLabel For="event-name" 
                      Classes="@LabelSize.Large" 
                      IsPageHeading="true">
                What is the name of the event?
            </GdsLabel>
        </LabelTemplate>
        <HintTemplate>
            <GdsHint>The event's name</GdsHint>
        </HintTemplate>
    </GdsTextInput>
</Example>

