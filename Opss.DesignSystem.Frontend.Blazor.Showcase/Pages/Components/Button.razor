<h3 class="govuk-heading-m" id="start-buttons">Start buttons</h3>

<Example BlazorExampleContent="@(@"<GdsButton Href=""#"" IsStartButton=@true>Start now</GdsButton>")">
    <GdsButton Href="#" IsStartButton=@true>Start now</GdsButton>
</Example>

<h3 class="govuk-heading-m" id="secondary-buttons">Secondary buttons</h3>

<Example BlazorExampleContent="@(@"<GdsButton Type=""submit"" Classes=@ButtonStyle.Secondary>Find address</GdsButton>")">
    <GdsButton Type="submit" Classes=@ButtonStyle.Secondary>Find address</GdsButton>
</Example>

<h3 class="govuk-heading-m" id="warning-buttons">Warning buttons</h3>

<Example BlazorExampleContent="@(@"<GdsButton Type=""submit"" Classes=@ButtonStyle.Warning>Delete account</GdsButton>")">
    <GdsButton Type="submit" Classes=@ButtonStyle.Warning>Delete account</GdsButton>
</Example>

<h3 class="govuk-heading-m" id="buttons-on-dark-backgrounds">Buttons on dark backgrounds</h3>

<Example BlazorExampleContent="@(@"<GdsButton Type=""submit"" IsOnDarkBackground=@true>Create an account</GdsButton>")" Classes="dark-background">
    <GdsButton Type="submit" IsOnDarkBackground=@true>Create an account</GdsButton>
</Example>

<h3 class="govuk-heading-m" id="disabled-buttons">Disabled buttons</h3>

<Example BlazorExampleContent="@(@"<GdsButton Type=""submit"" Disabled=@true>Disabled button</GdsButton>")">
    <GdsButton Type="submit" Disabled=@true>Disabled button</GdsButton>
</Example>

<h3 class="govuk-heading-m" id="input-element-buttons">Input element buttons</h3>

<Example BlazorExampleContent="@(@"<GdsButtonGroup>
    <GdsButton Element=ButtonType.Input Type=""submit"" Value=""Input submit""></GdsButton>
    <GdsButton Element=ButtonType.Input Type=""reset"" Value=""Input reset""></GdsButton>
    <GdsButton Element=ButtonType.Input Type=""button"" Value=""Input button""></GdsButton>
    <GdsButton Element=ButtonType.Input Type=""button"" Value=""Input button disabled"" Disabled></GdsButton>
</GdsButtonGroup>")">
    <GdsButtonGroup>
        <GdsButton Element=ButtonType.Input Type="submit" Value="Input submit"></GdsButton>
        <GdsButton Element=ButtonType.Input Type="reset" Value="Input reset" />
        <GdsButton Element=ButtonType.Input Type="button" Value="Input button" />
        <GdsButton Element=ButtonType.Input Type="button" Value="Input button disabled" Disabled />
    </GdsButtonGroup>
</Example>

<h3 class="govuk-heading-m" id="grouping-buttons">Grouping buttons</h3>

<Example BlazorExampleContent="@(@"<GdsButtonGroup>
    <GdsButton Type=""submit"">Save and continue</GdsButton>
    <GdsButton Type=""submit"" Classes=@ButtonStyle.Secondary>Save as draft</GdsButton>
</GdsButtonGroup>")">
    <GdsButtonGroup>
        <GdsButton Type="submit">Save and continue</GdsButton>
        <GdsButton Type="submit" Classes=@ButtonStyle.Secondary>Save as draft</GdsButton>
    </GdsButtonGroup>
</Example>

<Example BlazorExampleContent="@(@"<GdsButtonGroup>
    <GdsButton Type=""submit"">Continue</GdsButton>
    <GdsLink Href=""#"">Cancel</GdsLink>
</GdsButtonGroup>")">
    <GdsButtonGroup>
        <GdsButton Type="submit">Continue</GdsButton>
        <GdsLink Href="#">Cancel</GdsLink>
    </GdsButtonGroup>
</Example>

<h3 class="govuk-heading-m" id="stop-users-submitting-twice">Stop users from accidentally sending information more than once</h3>

<Example BlazorExampleContent="@(@"<GdsButton Type=""submit"" PreventDoubleClick=@true>Confirm and send</GdsButton>")">
    <GdsButton Type="submit" PreventDoubleClick=@true>Confirm and send</GdsButton>
</Example>

