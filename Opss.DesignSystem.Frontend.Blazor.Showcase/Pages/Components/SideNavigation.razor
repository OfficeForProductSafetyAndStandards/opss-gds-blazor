@page "/Components/SideNavigation"
@layout _ComponentsLayout

<PageTitle>Side navigation</PageTitle>

<span class="govuk-caption-xl">Components</span>
<h1 class="govuk-heading-xl">Side navigation</h1>

<p class="govuk-body">
    A blazor implementation of the MoJ GDS <a href="https://design-patterns.service.justice.gov.uk/components/side-navigation/" class="govuk-link">Side navigation</a>.
</p>

<Example CodeExampleContent="@(@"<GdsSideNavigation Label=""Side navigation"">
    <ItemsTemplate>
        <GdsSideNavigationItem Href=""#1"" Active=@true>
            Nav item 1
        </GdsSideNavigationItem>
        <GdsSideNavigationItem Href=""#2"">
            Nav item 2
        </GdsSideNavigationItem>
        <GdsSideNavigationItem Href=""#3"">
            Nav item 3
        </GdsSideNavigationItem>
    </ItemsTemplate>
</GdsSideNavigation>")">
    <GdsSideNavigation Label="Side navigation">
        <ItemsTemplate>
            <GdsSideNavigationItem Href="#1" Active=@true>
                Nav item 1
            </GdsSideNavigationItem>
