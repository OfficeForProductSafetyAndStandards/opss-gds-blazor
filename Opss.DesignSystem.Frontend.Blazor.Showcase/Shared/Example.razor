
@inherits ComponentBase

<div class="app-example-wrapper" data-module="app-tabs" data-app-tabs-init="">
    <div class="app-example">
        <div class="app-example__toolbar govuk-body">
            Example
        </div>
        @if (ChildContent != null)
        {
            <div class="app-example__component @Classes">
                @ChildContent
            </div>
        }
    </div>

    <div class="app-example__code" data-module="app-copy" data-app-copy-init="">
        <Blazor.HighlightJS.Code Language="razor">
            @BlazorExampleContent
        </Blazor.HighlightJS.Code>
        @if(CodeExampleContent != null) {
            <Blazor.HighlightJS.Code Language="c#">
                @CodeExampleContent
            </Blazor.HighlightJS.Code>
        }
    </div>
</div>

@code {    
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? BlazorExampleContent { get; set; }

    [Parameter]
    public string? CodeExampleContent { get; set; }

    [Parameter]
    public string? Classes { get; set; }
}