@inherits BunitContext

@code {
    [Fact]
    public void OutputsTag()
    {
        // Arrange
        var component = Render(
    @<GdsTag>Completed</GdsTag>
    );

        component.MarkupMatches(
    @<strong class="govuk-tag">
        Completed
    </strong>
        );
    }

    [Fact]
    public void OutputsTagWithColour()
    {
        // Arrange
        var component = Render(
    @<GdsTag Classes=@TagClasses.Red>Urgent</GdsTag>
        );

        component.MarkupMatches(
    @<strong class="govuk-tag govuk-tag--red">
        Urgent
    </strong>
        );
    }
}
