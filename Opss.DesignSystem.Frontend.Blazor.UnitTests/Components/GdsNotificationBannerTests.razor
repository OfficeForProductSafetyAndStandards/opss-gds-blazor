@inherits BunitContext

@code {
    [Fact]
    public void OutputsNotificationBanner()
    {
        // Arrange
        var component = Render(
    @<GdsNotificationBanner DataTestId="GdsNotificationBanner">
        <p class=@NotificationBannerClasses.Heading>
            You have 7 days left to send your application.
            <a class=@NotificationBannerClasses.Link href="#">View application</a>.
        </p>
    </GdsNotificationBanner>);

        component.MarkupMatches(
    @<div class="govuk-notification-banner" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner" data-testid="GdsNotificationBanner">
        <div class="govuk-notification-banner__header">
            <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                Important
            </h2>
        </div>
        <div class="govuk-notification-banner__content">
            <p class="govuk-notification-banner__heading">
                You have 7 days left to send your application.
                <a class="govuk-notification-banner__link" href="#">View application</a>.
            </p>
        </div>
    </div>
        );
    }

    [Fact]
    public void OutputsNotificationBannerWithTextBody()
    {
        // Arrange
        var component = Render(
    @<GdsNotificationBanner Text="There may be a delay in processing your application because of the coronavirus outbreak." />
        );

        component.MarkupMatches(
    @<div class="govuk-notification-banner" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
        <div class="govuk-notification-banner__header">
            <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                Important
            </h2>
        </div>
        <div class="govuk-notification-banner__content">
            <p class="govuk-notification-banner__heading">
                There may be a delay in processing your application because of the coronavirus outbreak.
            </p>
        </div>
    </div>
        );
    }

    [Fact]
    public void OutputsNotificationBannerAsSuccess()
    {
        // Arrange
        var component = Render(
    @<GdsNotificationBanner Type=NotificationBannerType.Success>
        <GdsHeading HeadingLevel="3" Classes=@NotificationBannerClasses.Heading>
            Training outcome recorded and trainee withdrawn
        </GdsHeading>
        <p class="govuk-body">Contact <a class=@NotificationBannerClasses.Link href="#">example@department.gov.uk</a> if you think there’s a problem.</p>
    </GdsNotificationBanner>
    );

        component.MarkupMatches(
    @<div class="govuk-notification-banner govuk-notification-banner--success" role="alert" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
  <div class="govuk-notification-banner__header">
    <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
      Success
    </h2>
  </div>
  <div class="govuk-notification-banner__content">
    <h3 class="govuk-notification-banner__heading">
      Training outcome recorded and trainee withdrawn
    </h3>
    <p class="govuk-body">Contact <a class="govuk-notification-banner__link" href="#">example@department.gov.uk</a> if you think there’s a problem.</p>
  </div>
</div>
        );
    }
}
