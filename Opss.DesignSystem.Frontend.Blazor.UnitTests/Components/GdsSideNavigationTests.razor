@inherits BunitContext

@code {
    [Fact]
    public void OutputsSideNavigation()
    {
        // Arrange
        var component = Render(
    @<GdsSideNavigation Label="Side navigation">
        <ItemsTemplate>
            <GdsSideNavigationItem Href="#1" Active=@true>
                Nav item 1
            </GdsSideNavigationItem>
            <GdsSideNavigationItem Href="#2">
                Nav item 2
            </GdsSideNavigationItem>
            <GdsSideNavigationItem Href="#3">
                Nav item 3
            </GdsSideNavigationItem>
        </ItemsTemplate>
    </GdsSideNavigation>
        );

        component.MarkupMatches(
    @<nav class="moj-side-navigation" aria-label="Side navigation">
        <ul class="moj-side-navigation__list">
            <li class="moj-side-navigation__item moj-side-navigation__item--active">
                <a href="#1" aria-current="location">Nav item 1</a>
            </li>

            <li class="moj-side-navigation__item">
                <a href="#2">Nav item 2</a>
            </li>

            <li class="moj-side-navigation__item">
                <a href="#3">Nav item 3</a>
            </li>
        </ul>
    </nav>

        );
    }

