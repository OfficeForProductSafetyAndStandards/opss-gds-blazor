                    <GdsSideNavigationItem Href="#1.1" Active=@true>
                        Nav item 1.1
                    </GdsSideNavigationItem>
                    <GdsSideNavigationItem Href="#1.2">
                        Nav item 1.2
                    </GdsSideNavigationItem>
                    <GdsSideNavigationItem Href="#1.3">
