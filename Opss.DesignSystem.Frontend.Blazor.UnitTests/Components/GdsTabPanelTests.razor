@inherits BunitContext

@code {
    [Fact]
    public void OutputsContent()
    {
        // Arrange, Act
        var content = "Some content";
        var classes = "class1 class2";
        var attributes = new Dictionary<string, object>
        {
            { "attr1", "value1" },
            { "attr2", "value2" },
        };
        
        var component = Render(
            @<GdsTabPanel Classes="@classes" Attributes="@attributes">@content</GdsTabPanel>
        );

        // Assert
        // todo: aria-labelledby="id of link" 
        component.MarkupMatches(
            @<div class="govuk-tabs__panel @classes" role="tabpanel" attr1="value1" attr2="value2">
                @content
            </div>
        );
    }
}