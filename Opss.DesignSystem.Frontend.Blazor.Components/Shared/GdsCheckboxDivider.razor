@inherits GdsWithContent

<div class="govuk-checkboxes__divider @Classes"
     data-testid=@DataTestId
     @attributes=@Attributes
>
    @ChildContent
</div>

@code {
    #region Cascading Value - Parent
    protected override void OnInitialized()
    {
        if (Parent == null)
            throw new ArgumentNullException(nameof(Parent), "GdsCheckboxDivider must exist within a GdsCheckboxes");

        Parent.Register(this);

        base.OnInitialized();
    }

    [CascadingParameter]
    private GdsCheckboxes? Parent { get; set; }
    #endregion
}
