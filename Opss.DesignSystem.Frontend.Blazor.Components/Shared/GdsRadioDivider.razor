@inherits GdsWithContent

<div class="govuk-radios__divider @Classes"
     @attributes=@Attributes>
    @ChildContent
</div>

@code {
    #region Cascading Value - Parent
    protected override void OnInitialized()
    {
        if (Parent == null)
            throw new ArgumentNullException(nameof(Parent), "GdsRadioDivider must exist within a GdsRadios");

        Parent.Register(this);

        base.OnInitialized();
    }

    [CascadingParameter]
    private GdsRadios? Parent { get; set; }
    #endregion
}
