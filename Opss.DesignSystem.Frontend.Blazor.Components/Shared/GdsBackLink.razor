@inherits GdsWithHref

@* <summary>
    Use the back link component to help users go back to the previous page in a multi-page transaction.

    Although browsers have a back button, some sites break when you use it - so many users avoid it, instead of losing their progress in a service.
    Also, not all users are aware of the back button.
</summary> *@

<a id="@Id" href="@Href" class="govuk-back-link @(IsOnDarkBackground ? "govuk-back-link--inverse" : "") @Classes" @attributes="@Attributes">
    @if (ChildContent != null)
    {
        @ChildContent
    }
    else
    {
        @("Back")
    }
</a>

@code {
    public GdsBackLink()
    {
        if(string.IsNullOrEmpty(Href))
        {
            Href = "#";
        }
    }
}