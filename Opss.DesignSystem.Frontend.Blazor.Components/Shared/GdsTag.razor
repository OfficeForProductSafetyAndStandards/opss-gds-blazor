@inherits GdsWithContent

@* <summary>
    Use the tag component to show users the status of something.
</summary> *@

<strong class="govuk-tag @Classes" @attributes=@Attributes>
    @ChildContent
</strong>

@code{
    #region Cascading Value - Parent
    protected override void OnInitialized()
    {
        if (PhaseBanner != null)
            Classes += " govuk-phase-banner__content__tag";

        base.OnInitialized();
    }

    [CascadingParameter]
    private GdsPhaseBanner? PhaseBanner { get; set; }
    #endregion
}