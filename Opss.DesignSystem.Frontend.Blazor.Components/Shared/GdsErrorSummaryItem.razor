@inherits GdsWithHref

<li>
    @if (string.IsNullOrEmpty(Href))
    {
        @ChildContent
    } else {
        <AnchorLink Classes=@Classes
                    href=@Href
                    @attributes=@Attributes>
            @ChildContent
        </AnchorLink>
    }
</li>

@code {
    #region Cascading Value - Parent
    protected override void OnInitialized()
    {
        if (Parent == null)
            throw new ArgumentNullException(
                nameof(Parent), 
                "GdsErrorSummaryItem must exist within a GdsErrorSummary");

        base.OnInitialized();
    }

    [CascadingParameter]
    private GdsErrorSummary? Parent { get; set; }
    #endregion
}
