@inherits GdsWithHref

<li>
    @if (string.IsNullOrEmpty(Href))
    {
        @ChildContent
    } else {
        <a id=@Id
           class=@(string.IsNullOrEmpty(Classes) ? null : Classes)
           href=@Href
           @attributes="@Attributes"
        >
            @ChildContent
        </a>
    }
</li>

@code {
    protected override void OnInitialized()
    {
        if (Parent == null)
            throw new ArgumentNullException(
                nameof(Parent), 
                "GdsErrorSummaryItem must exist within a GdsErrorSummary");

        base.OnInitialized();
    }

    [CascadingParameter]
    private GdsErrorSummary? Parent { get; set; }
}
